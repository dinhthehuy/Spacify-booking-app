<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:focusable="true"
    android:clickable="true"
    android:background="?android:attr/selectableItemBackground">

    <ImageView
        android:layout_width="168dp"
        android:layout_height="168dp"
        android:layout_marginEnd="12dp"
        android:id="@+id/searchResultList_iv"
        android:contentDescription="@string/hotel_image" />

    <TextView
        android:id="@+id/searchResultListHotelName_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/searchResultList_iv"
        android:text="@string/textview"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/searchResultListHotelAddress_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/searchResultList_iv"
        android:textColor="@color/gray_with_opacity"
        android:textSize="12sp"
        android:layout_below="@+id/searchResultListHotelName_tv"
        android:text="@string/textview" />
</RelativeLayout>